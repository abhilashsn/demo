<h3 style=color:red> <%= @clients.name %> </h3>

<%= link_to "edit", edit_client_path(@clients.id)%>
<%= link_to "delete", client_path(@clients.id),method: :delete, data: {confirm: "are u sure"} %><br/><br/>
<strong> Company: </strong> <%= @clients.company %> <br/>
<strong> Email: </strong> <%= @clients.email %><br/>
<strong> Website: </strong> <%= @clients.website %><br/>

<h3> Projects ("<%= @clients.projects.size%>") <h3>
<ul>
<% for project in @clients.projects %>
<%= project.name %>
<%end%>
</ul>
